PORT=5050
DB_PATH=/var/lib/voltcar/db/voltcar.db
UPLOAD_DIR=/var/lib/voltcar/uploads
JWT_SECRET=change-me
AUTH_LOGIN=admin
AUTH_PASSWORD=admin
ACCESS_TTL=15m
REFRESH_TTL_DAYS=30

# Comma-separated list for CORS (override with your domains or GH Pages URL)
CORS_ORIGINS=*,https://crm.lumastack.ru,http://localhost:3000,http://localhost:5173,https://<your-gh-user>.github.io/<repo>,tauri://localhost

# Cookie settings for refresh token
COOKIE_DOMAIN=.crm.lumastack.ru
COOKIE_SAMESITE=none
COOKIE_SECURE=true
